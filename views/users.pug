extends layout

block content
  div.container.mt-5
    // Banner và Logo
    div.text-center.mb-4
      img#logo(src=logo alt="Logo" style="max-height: 100px; margin-bottom: 20px;")
      img#banner(src=banner alt="Banner" style="width: 100%; object-fit: contain;")

    h1.text-center Quản Lý Người Dùng
    a.btn.btn-primary.mb-3(href="/") Quay Lại Quản Lý Món Ăn
    if error
      p.text-danger.text-center= error
    if users.length
      table.table.table-striped
        thead
          tr
            th Tên Người Dùng
            th Vai Trò
            th Hành Động
        tbody
          each user in users
            tr
              td= user.username
              td= user.role
              td
                form(action="/delete-user" method="POST" style="display:inline;")
                  input(type="hidden" name="userId" value=user._id)
                  button.btn.btn-sm.btn-danger(type="submit") Xóa
    else
      p.text-center.text-muted Không có người dùng nào.